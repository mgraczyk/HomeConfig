{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "600000",
    "BASH_MAX_TIMEOUT_MS": "600000"
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Create(**)",
      "Delete(**)",
      "Rename(**)",
      "Move(**)",
      "Grep(**)",
      "Glob(**)",
      "LS(**)",
      "Find(**)",
      "Git(**)",
      "Bash(aws sso:*)",
      "Bash(build:*)",
      "Bash(chmod:*)",
      "Bash(chrome:*)",
      "Bash(docker:*)",
      "Bash(echo:*)",
      "Bash(find:*)",
      "Bash(format:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(git commit:*)",
      "Bash(grep:*)",
      "Bash(lint:*)",
      "Bash(ls:*)",
      "Bash(make:*)",
      "Bash(mkdir:*)",
      "Bash(npm:*)",
      "Bash(poetry:*)",
      "Bash(pyright:*)",
      "Bash(python:*)",
      "Bash(run:*)",
      "Bash(srun:*)",
      "Bash(test:*)",
      "Bash(zsh:*)",
      "Bash(./sandbox/sandbox/mgraczyk/**:*)",
      "WebFetch",
      "WebSearch",
      "Task",
      "mcp__*__*"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(sudo rm -rf /)",
      "Bash(dd if=/dev/zero of=/dev/*)",
      "Edit(/etc/passwd)",
      "Edit(/etc/shadow)",
      "Edit(~/.ssh/id_*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "model": "opus"
}
